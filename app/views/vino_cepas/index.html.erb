<h1>Vino Cepas</h1>

<table>
  <thead>
    <tr>
      <th>Vino</th>
      <th>Cepa</th>
      <th>Disponible</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vino_cepas.each do |vino_cepa| %>
      <tr>
        <td><%= vino_cepa.vino.name%></td>
        <td><%= vino_cepa.cepa.name%></td>
        <td><%= vino_cepa.available%></td>
        <td><%= link_to 'Show', vino_cepa %></td>
        <td><%= link_to 'Edit', edit_vino_cepa_path(vino_cepa) %></td>
        <td><%= link_to 'Destroy', vino_cepa, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

