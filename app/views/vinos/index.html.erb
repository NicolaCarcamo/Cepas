<p id="notice"><%= notice %></p>

<h1>Vinos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Cepas</th>
      <th>Respectivos porcentajes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vinos.each do |vino| %>
      <tr>
        <td><%= vino.name %></td>
        <td><%= vino.cepas.map(&:name).join(', ') %></td>
        <td><%= vino.vino_cepas.map(&:porcentaje).join('%, ').concat('%') %></td>
        <td><%= link_to 'Show', vino %></td>
        <td><%= link_to 'Edit', edit_vino_path(vino) %></td>
        <td><%= link_to 'Destroy', vino, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Vino', new_vino_path %>
